#!/bin/bash
echo "-----> Installing dependencies"
apt-get update -qq && apt-get install -y -qq build-essential libpcre3 libpcre3-dev zlib1g-dev libssl-dev

echo "-----> Installing nginx"
mkdir -p /app/nginx
curl -s https://nginx.org/download/nginx-1.25.3.tar.gz | tar -xz -C /app/nginx --strip-components=1
cd /app/nginx
./configure --prefix=/app/nginx --with-http_ssl_module --with-pcre
make
make install